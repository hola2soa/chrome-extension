body
  background-image url('https://s3-ap-northeast-1.amazonaws.com/e-shopping/icon/background__wall.png')

.aside
  padding-left 0

  .aside__item
    margin-bottom 15px
    list-style none

    a
      display inline-block
      padding 0 20px
      color white
      background-color black
      box-shadow 0 2px 4px rgba(0, 0, 0, 50)
      font-size 18px
      font-family 'Nanum Pen Script'
      text-decoration none

.showcase

  .showcase-card
    position relative
    margin 0 30px 25px 0
    padding 0
    min-height 200px
    box-shadow 0 2px 4px rgba(0, 0, 0, 50)

    &.col-md-3
      width 20%

    .showcase-card__link
      width 100%
      height 200px
      display block

    .showcase-card-action
      position absolute
      padding 5px 10px
      bottom 0
      color white
      background linear-gradient(to bottom, rgba(213,213,213,0) 0%,rgba(0,0,0,0.5))
      width 100%
      font-size 14px
      font-family 'PingFang SC'

      .showcase-card-action__name, .showcase-card-action__price
        display inline-block
        text-overflow ellipsis
        white-space nowrap
        overflow hidden


      .showcase-card-action__name
        width 80%
      .showcase-card-action__price
        width 20%
